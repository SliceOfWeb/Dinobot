<h1>Search Result</h1>
<div class="people">
	<% for p in @profiles%>
	   	<div class="person row">
	   		<div class="span4">
	   			 <a href="#">
	                <%= image_tag p.user.profile.photo.url, :class => 'profile-pic' %>
	              </a>
	   		</div>

	   		<div class="span8">
	   			 <h4>
	   			 <a href="<%= profile_path(p.user.username) %>"><%="#{p.user.profile.first_name} #{p.user.profile.last_name}"%></a>
	   			 <h5>@<%= p.user.username%></h5>	
	   			 </h4>
	   			<div class="person-bio">
	   				<%=p.user.profile.bio%>
	   				</br> <%=p.user.profile.location%>
	   			</div>

	            
	   		</div>

	   		<div class="span5">
	   			<%= render(:partial => 'people/person', :locals => {:p => p.user.person} )%>
	   		</div>
		</div>
	<%end%>
	
</div>