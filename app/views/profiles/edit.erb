<%= form_tag "/profiles/update" do%>

  <!-- error messages for Profile -->
  <% @profile.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  <!-- error messages for User -->
  <% @current_user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>

  <h1>Personal Info</h1>
  <div class="row well personal-info">
    <h4>First Name:</h4>
    <%= text_field_tag :first_name, @profile.first_name %>
    
    <h4>Last Name:</h4>
    <%= text_field_tag :last_name, @profile.last_name %>

    <h4>Location:</h4>
    <%= text_field_tag :location, @profile.location %>

    <h4>Birthdate:</h4>
    <%= text_field_tag :birthdate, @profile.birthdate %>

    <h4>Email:</h4>
    <%= text_field_tag :email, @current_user.email %>

    <h4>Gender:</h4>
    <%= label_tag :gender_male, "Male" %>
    <%= radio_button_tag :gender, "male" %>
    <%= label_tag :gender_female, "Female"%>
    <%= radio_button_tag :gender, "female" %>

    <h4>Education:</h4>
    <%= text_field_tag :education, @profile.education %>
  </div>

  <hr class="separator">

  <h1>Bio</h1>
  <div class="row well bio">
    <%= text_area_tag :bio, @profile.bio,:class => "text-area" %>
  </div>

  <hr class="separator">

  <h1>Tags</h1>
  <p>Separate tags with '/'</p>
  <div class="row well tags">
    <%= text_area_tag :tags, @tags.join(" "),:class => "text-area" %>
  </div>

  <hr class="separator">

  <div class="form-actions">
    <%= submit_tag "Save changes", :class => "btn btn-primary" %>
    <a href="/home" class="btn">Cancel</a>
  </div>

<% end %>
