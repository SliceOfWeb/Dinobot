<%= stylesheet_link_tag    "bootstrap", "access", :media => "all" %>
<%= javascript_include_tag "access" %>
<%= csrf_meta_tags %>


<div class="signform">
  <h1 color='white'>Sign Up</h1>
  <br/>
  <%= form_for(@profile, :url => {:action => 'create'}) do |f| %>
  <% if @profile.errors.any? %>
  <div>
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @profile.errors.full_messages %>
    <li>
      <%= message %></li>
      <% end %></ul>
  </div>
  <% end %>

  <p>
    <%= f.label 'Username' %>
    <br />        
    <%= f.text_field :username , :class =>"input-xlarge"%></p>
  <p>
    <%= f.label 'Email' %>
  <br />        
    <%= f.email_field :email , :class =>"input-xlarge" %></p>
  <p>
    <%= f.label 'Password' %>
    <br />        
    <%= f.password_field :password , :class =>"input-xlarge" %></p>
  <p>
    <%= f.label 'Password Confirmation'%>
    <br />        
    <%= f.password_field :password_confirmation, :class =>"input-xlarge" %></p>
    <%= f.submit :class => "btn"  %>
    <a class="btn btn-primary" href="/"> Cancel </a>
    <% end %>
</div>
