          <a href="#">
            <i class="icon-remove"></i>
          </a>
          <div class="content-header">
            <div class="span2">
              <a href="#">
                <img class="profile-pic" src="pic.png" alt=""></a>
            </div>


            
            <div class="span2">
              <p class="user-name">
                <a href="#"><%=post.person.user.username%></a>
              </p>
            </div>
            <div class="span2 post-title">
              <a href=""></a>
            </div>
          </div>
          <!-- header -->
          <div class="content">
            <div class="inner-content">
              <p>
               <%=post.content%>
              </p>
            </div>
            <!-- /inner-content --> </div>
          <!-- /content -->
          <div  class="post-actions">
            <ul class="nav nav-pills">
              <li >
                <a href="#">
                  <i class="icon-ok"></i>
                  Like
                  <sup class="post-counts">32</sup>
                </a>
              </li>
              <li class="active">
