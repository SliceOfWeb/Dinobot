<h2 id="album-header"><%=@album.title%></h2>
<p class='aupload-time'> 
  Created <%= render({:partial => 'home/date', :locals => {:dater => @album}})%> 
</p>
<p class= "asetting" >
<%=link_to({:controller => 'images', :action => 'new', :album_id => @album.id}, :class => "btn pull-left") do %>
  <i class="icon-plus"></i> Add New Image
<%end%>
<a href="" >Delete</a>
<a href="" >Edit</a> 


</p>


<div class="well album-thumb">
  <ul class="thumbnails">
    <% @album.images.each do |image| %>
    <li class="span2">
      <a href="<%=image_path(image.id)%>" class="thumbnail">
        <img src= <%= image.image.url(:thumb)%> alt=""></a>
    </li>
   <%end%>
  </ul>
  
</div>

<div id="album-action"  class="well post-actions">
  <%= render({:partial => 'actions/new', :locals => {:target => @album}})%> 
</div>
<div class ="album-comments">
<%= render({:partial => new_comment_path, :locals => {:commentary => @album}})%>
</div>